{
  "name": "dashboard-component",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepo system for client management and gaming analytics dashboards",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm run build --workspaces",
    "dev": "pnpm run dev --workspace=apps/main",
    "lint": "pnpm run lint --workspaces",
    "clean": "pnpm run clean --workspaces"
  },
  "dependencies": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "next": "15.5.2"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@tailwindcss/postcss": "^4",
    "tailwindcss": "^4",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "@eslint/eslintrc": "^3"
  }
}